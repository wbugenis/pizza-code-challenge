<h1>New Restaurant-Pizza Form</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @restaurant_pizza do |f| %>

    <p>
        <%= f.label :pizza_id, "Pizza:"%>
        <%= f.collection_select :pizza_id, @pizzas, :id, :name%>
    </p>

    <p>
        <%= f.label :restaurant_id, "Restaurant:"%>
        <%= f.collection_select :restaurant_id, @restaurants, :id, :name%>
    </p>

    <p> 
        <%= f.label :price %>
        <%= f.number_field :price %>
    </p>

    <p>
        <%= f.submit "Add Pizza to Restaurant" %>
    </p>
<% end %>
